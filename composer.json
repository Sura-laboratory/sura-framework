{
  "name": "sura/framework",
  "description": "System parts, framework",
  "keywords": ["support"],
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "^8.4 || ^8.5",
    "ext-iconv": "*",
    "ext-zlib": "*"
  },
  "authors": [
    {
      "name": "Semen Alekseev",
      "email": "semyon492@ya.ru"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^9.5.20 || ^10.0.0",
    "php-coveralls/php-coveralls": "^2.1",
    "phpstan/phpstan": "^1.5",
    "jetbrains/phpstorm-attributes": "1.2",
    "squizlabs/php_codesniffer": "^3.6",
    "ext-xdebug": "*"
  },
  "scripts": {
    "tests": [
      "@phpunit:coverage",
      "@phpcs"
    ],
    "phpunit": "vendor/bin/phpunit -c phpunit.xml",
    "phpunit:debug": "vendor/bin/phpunit --stop-on-failure -c phpunit.xml",
    "phpunit:coverage": "vendor/bin/phpunit -c phpunit.xml --coverage-html ./coverage --coverage-text",
    "phpunit:ci": "vendor/bin/phpunit -c phpunit.xml --no-coverage",
    "phpunit:ci2": "vendor/bin/phpunit -c phpunit.xml --coverage-text",
    "phpcs": "vendor/bin/php-cs-fixer fix --allow-risky=yes && vendor/bin/phpcs --standard=phpcs.xml",
    "phpcs:ci": "vendor/bin/php-cs-fixer fix --allow-risky=yes --dry-run && vendor/bin/phpcs --standard=phpcs.xml",
    "post-version": [ "@php scripts/versioning.php" ]
  },
  "autoload": {
    "files": [
      "src/helpers.php"
    ],
    "psr-4": {
      "Sura\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sura\\tests\\": "tests/"
    }
  }
}